{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Listado de Alumnos</h1>

    <table class="table table-bordered table-responsive table-striped table-hover">
        <thead>
            <th class="col-sm-7">Nombre Completo</th>
            <th class="col-sm-2">Fecha de nacimiento</th>
            <th class="col-sm-2">Grupo</th>
            <th class="col-sm-1"></th>
        </thead>
        <tbody>
            {% for alumno in alumnos %}
                <tr>
                    <td>{{ alumno.apellidos }}, {{ alumno.nombre }}</td>
                    <td>{{ alumno.fechaNacimiento|date('d/m/Y') }}</td>
                    <td>{{ alumno.grupo }}</td>
                    <td><a href="{{ path('modificar_alumnos', {'id': alumno.id}) }}" class="btn btn-info btn-xs" title="Modificar"><i class="fa fa-pencil"></i></a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
